<resources>
    <!-- Base application theme. -->
    <style name="Theme.CallisDairy" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/themeColor</item>

        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>



    </style>



    <style name="creditCardSpinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="FollowUnfollowCustomTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="bottomSheet"
        parent="Widget.Design.BottomSheet.Modal" >
        <item name="android:background">@drawable/cornor_radius_background</item>
        <item name="background">@color/transparent</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:radius">@dimen/_10sdp</item>



    </style>


    <style name="DatePickerTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/themeColor</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>




    <style name="gender" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
    <item name="android:fontFamily">@font/poppins_regular</item>
    <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/themeColor</item>
    </style>


    <style name="Fade">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_out_up</item>
        <item name="android:windowExitAnimation">@anim/slide_in_up</item>
    </style>


    <style name="DefaultLottieLoader">
    <item name="android:layout_width">50dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:scaleType">centerCrop</item>
    <item name="lottie_loop">true</item>
        <item name="lottie_rawRes">@raw/verify_loader</item></style>


    <style name="Theme.CallisDairy.DefaultLottieLoader3">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_rawRes">@raw/payment_done_lottie</item>
    </style>
    <style name="CircularDeterminateProgressBarNew">
        <item name="android:indeterminateOnly">false </item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

</resources>