        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_1sdp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/gender"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp" />


        <LinearLayout
            android:id="@+id/llGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/white_border_background"
            android:paddingVertical="@dimen/_8sdp"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/genderSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:entries="@array/genderPet"
                android:spinnerMode="dropdown"
                android:theme="@style/gender" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_1sdp" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/about_gender"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp" />


        <LinearLayout
            android:id="@+id/llAboutGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/white_border_background"
            android:paddingVertical="@dimen/_8sdp"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/aboutGenderSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:spinnerMode="dropdown"
                android:theme="@style/gender" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvAboutGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_1sdp" />






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/vaccination_date"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp" />

        <RelativeLayout
            android:id="@+id/llVaccinationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="8dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/white_border_background">

            <TextView
                android:id="@+id/vaccinationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:hint="DD-MM-YYYY"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/to_date_ImageView_proxyNewUser"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/calender" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvVaccinationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_1sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/reason_for_visit"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/llReasonForVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/white_border_background"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etReasonForVisit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                android:gravity="top"
                android:importantForAutofill="no"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="@dimen/_10sdp"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvReasonForVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_1sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/other_medical_condition"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/llOtherMedicalConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/white_border_background"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etOtherMedicalConditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:inputType="textCapSentences"
                android:hint="@string/enter_other_medical_conditions"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:autofillHints="" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvOtherMedicalConditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_1sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/symptoms_problems"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/llSymptoms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/white_border_background">

            <TextView
                android:id="@+id/etSymptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="@dimen/_8sdp"
                android:hint="@string/select_symptoms_problems"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:singleLine="true"
                android:autofillHints=""
                app:drawableEndCompat="@drawable/arrow_down" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvSymptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_1sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/current_medication_labael"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/llCurrentMeditation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/white_border_background"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etCurrentMeditation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:inputType="textCapSentences"
                android:hint="@string/enter_current_meditation"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:autofillHints="" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvCurrentMeditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_1sdp" />


