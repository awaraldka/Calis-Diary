                android:singleLine="true"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:autofillHints="" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvFaxNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_1sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/appo_type"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp" />


        <LinearLayout
            android:id="@+id/llAppointmentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/white_border_background"
            android:paddingVertical="@dimen/_8sdp"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/appointmentType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:entries="@array/appointment_type"
                android:spinnerMode="dropdown"
                android:theme="@style/gender" />


        </LinearLayout>

        <TextView
            android:id="@+id/TvAppointmentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_1sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/how_did_you_hear_about_vet_doctor"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp" />


        <LinearLayout
            android:id="@+id/llHowHear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/white_border_background"
            android:paddingVertical="@dimen/_8sdp"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/HowHear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:entries="@array/how_hear"
                android:spinnerMode="dropdown"
                android:theme="@style/gender" />


        </LinearLayout>

        <TextView
            android:id="@+id/TvHowHear"
