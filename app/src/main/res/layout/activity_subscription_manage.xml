<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".UI.Activities.subscription.SubscriptionManageActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/textColor"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:text="Thanks for your interest in our platform!"/>


        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/dog_subs"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_12sdp"
            android:justificationMode="inter_word"
            android:textColor="@color/textColor"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:text="Thank you for choosing our subscription service! ðŸš€ You're now on your way to enjoying all the premium benefits and content we have to offer. Get ready to make the most of your subscription and enhance your experience with us"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_30sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/themeColor"
                android:alpha="0.2"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/PaymentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/themeColor"
                android:elevation="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:id="@+id/Payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:text="Buy Annual \n Subscription $9.99"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:gravity="center"
                android:layout_below="@id/PaymentButton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Get access for a year"
                android:textAllCaps="false"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12sdp"/>




        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/textColor"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:text="Features"/>

        <WebView
            android:id="@+id/setTextHtml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"/>




    </LinearLayout>





</androidx.core.widget.NestedScrollView>