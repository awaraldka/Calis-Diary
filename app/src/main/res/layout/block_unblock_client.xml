<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ServiceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/petImage"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginVertical="@dimen/_12sdp"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="1dp"
                        android:src="@drawable/do4"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userProfilePicPublic"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/placeholder" />

                </RelativeLayout>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vishal Khullar"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:id="@+id/petName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pet Name: Pepey"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/petType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pet Type:  Dog"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_10sdp"/>




                </LinearLayout>




            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:id="@+id/block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/blocked_icon"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>