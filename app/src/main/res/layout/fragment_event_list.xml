<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/pullToRefresh"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Fragments.EventListFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/EventLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="0.6">

                <LinearLayout
                    android:id="@+id/EventsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:paddingVertical="@dimen/_6sdp"
                        android:text="@string/upcoming_events"
                        android:singleLine="true"
                        android:maxLength="15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="0.4">


                    <LinearLayout
                        android:id="@+id/MyEventsList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_background">

                        <TextView
                            android:id="@+id/eventTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_6sdp"
                            android:text="@string/my_events"
                            android:singleLine="true"
                            android:maxLength="15"
                            android:textColor="@color/themeColor"
                            android:textSize="@dimen/_8sdp" />
                    </LinearLayout>


                </LinearLayout>







            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="1"
                android:layout_marginHorizontal="@dimen/_10sdp">

                <EditText
                    android:id="@+id/DFsearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:background="@drawable/round_background_border"
                    android:drawableStart="@drawable/ic_baseline_search_24"
                    android:hint="@string/search"
                    android:inputType="text|textCapWords"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:layout_weight="0.9"
                    android:padding="@dimen/_8sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:id="@+id/filterClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.1">

                    <ImageView
                        android:id="@+id/missingPetFilter"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/filter" />

                </LinearLayout>




            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/scrollViewEvent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/postRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        />

                    <ProgressBar
                        android:id="@+id/ProgressBarScroll"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:theme="@style/ProgressDialogStyle"
                        android:progress="50"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/_10sdp"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>




        </LinearLayout>



        <TextView
            android:id="@+id/NotFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/no_upcoming_event_found"/>



    </RelativeLayout>




</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>