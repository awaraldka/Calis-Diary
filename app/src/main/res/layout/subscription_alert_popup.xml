<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Subscription Expiring Soon"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_17sdp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Your Subscription has expired.Please renew it now to enjoy all service."
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:id="@+id/LanguageSelectionContinueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"
                android:weightSum="1">


                <LinearLayout
                    android:id="@+id/llNoButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_border_background"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_weight=".5"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_5sdp"
                        android:text="Later"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/llYesButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:background="@drawable/main_button_background"
                    android:layout_marginStart="@dimen/_15sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingVertical="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:text="Renew"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
